<?xml version="1.0"?>
<ruleset name="Fairfax-CMS-Authoring">
	<description>Generally-applicable sniffs for WordPress</description>

	<rule ref="vendor/humanmade/coding-standards">
		<exclude name="HM.Arrays.ForceShortArrays.Found"/><!-- TODO -->
		<exclude name="HM.Files.NamespaceDirectoryName.NameMismatch"/>
		<exclude name="HM.Functions.NamespacedFunctions.MissingNamespace"/>
		<exclude name="HM.Files.NamespaceDirectoryName.NoIncDirectory"/>
		<exclude name="PSR1.Classes.ClassDeclaration.MissingNamespace"/>
		<exclude name="PSR1.Files.SideEffects.FoundWithSymbols"/>
		<exclude name="HM.Files.FunctionFileName.WrongFile"/>
	</rule>
	<rule ref="WordPress-Extra">
		<exclude name="PEAR.Functions.FunctionCallSignature.Indent"/>
		<exclude name="WordPress.NamingConventions.ValidHookName"/>
	</rule>

	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/.bin/wpcs/*</exclude-pattern>
	<exclude-pattern>*/.tests/lib/*</exclude-pattern>
	<exclude-pattern>*/php-codesniffer/*</exclude-pattern>
	<exclude-pattern>*/wordpress-coding-standards/*</exclude-pattern>
	<exclude-pattern>*/plugins/*</exclude-pattern>
</ruleset>
